{{!
    @template local_liquidus/static_shares_scripts

    Template for adding JS static shares scripts within the HTML of the page.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * provider
    * sharecamelcase
    * jsonvalue

    Example context (json):
    { provider: 'mixpanel', sharecamelcase : 'siteShortName', jsonvalue: 'master' }
}}

{{#js}}
    $(`<script>
        if (typeof localLiquidusShares === "undefined") {
            var localLiquidusShares = {};
        }
        if (typeof localLiquidusShares.{{{provider}}} === "undefined") {
            localLiquidusShares.{{{provider}}} = {};
        }
        localLiquidusShares.{{{provider}}}.{{{sharecamelcase}}} = {{{jsonvalue}}};
    </`+`script>`).appendTo(document.body);
{{/js}}